<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/lighter_navy"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/task_1p"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/dirty_purple"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/set_active_inactive_p1"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:background="@color/dark_grey"
        android:contentDescription="@string/updateTask_button_image"
        app:srcCompat="@drawable/button_inactive_task_image" />

    <ImageButton
        android:id="@+id/button_edit_p1"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:background="@color/light_blue"
        android:contentDescription="@string/updateTask_button_image"
        app:srcCompat="@drawable/button_edit_task_image" />


    <ImageButton
        android:id="@+id/delete_p1"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:background="@color/pink"
        android:contentDescription="@string/delete_button_image"
        app:srcCompat="@drawable/button_delete_image" />

</LinearLayout>